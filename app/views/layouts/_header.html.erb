<header class="navbar navbar-fixed-top navbar-inverse navbar-light text-muted">
  <div class="container">
    <nav>
    <%= link_to image_tag("logo.jpg", title: "IMP Store", border: 0, style: "height:20%; width:20%;"), root_path, id: "logo" %>
      <%= form_tag(search_products_path, method: :get) do %>
      <%= text_field_tag(:search, params[:search], placeholder: "Search Products...") %>
      <%= submit_tag("Search") %>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>Logged in as <%= current_user.email %></li>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About Us", about_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", user_path(current_user.id) %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              <li class="divider"></li>
              <li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About Us", about_path %></li>
        <% end %>
      </ul>

    </nav>
  </div>
</header>

<div class="center jumbotron">
  <h1>Welcome to IMP Store</h1>
</div>
